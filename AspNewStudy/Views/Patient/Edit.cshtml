@model AspNewStudy.Models.Patient

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Patient</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


<div class="form-group">
    <dt>
        <label>Account Name:</label>
    </dt>
    <dd>
        @Html.TextBox("FirstName") ;
    </dd>

    <dt>
        <label>Account Password:</label>
    </dt>
    <dd>
        @Html.TextBox("Password") ;
    </dd>

</div>


    <div class="form-group">
        <p>Doctors</p>
        <div class="col-md-10">
            @foreach (AspNewStudy.Models.Doctor doc in ViewBag.Doctors)
            {
                <input type="checkbox" name="selectedCourses" value="@doc.Id"
                       @(Model.Doctors.Contains(doc) ? "checked=\"checked\"" : "") /> @doc.account.FirstName<br />

                }
        </div>
    </div>




    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
